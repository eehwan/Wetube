extends layouts/main.pug

block content
  .video-detail__container
    .video__player
      video(src=`/${video.fileUrl}`, controls=true, autoplay)
    .video__info
      if (loggedUser) && (loggedUser.id === video.creator.id)
        a(href=routes.videos+routes.editVideo(video.id))
          button Edit video
      h5.video__title=video.title
      p.video__description=video.description
      if video.views === 1
        span.video__views 1 view
      else 
        span.video__views #{video.views} views
      .video__creator
        |Uploaded by 
        a(href=routes.users+routes.userDetail(video.creator.id))=video.creator.name
    .video__comments
      if video.comments.length === 1
        span.video__comment-number 1 comment
      else
        span.video__comment-number #{video.comments.length} comments 
